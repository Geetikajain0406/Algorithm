#include <iostream>
#include<algorithm>
using namespace std;
struct item{
    int v,wt;
};
bool cmp(item a,item b){
    return a.v/a.wt>b.v/b.wt;
}
int main() {
  int n=3;
  item arr[]={ {60,10}, {100,20}, {120,30} };
  float cap=50;
  sort(arr,arr+n,cmp);
  float total_val=0;
  for(int i=0;i<n;i++){
      if(arr[i].wt<=cap){
          cap-=arr[i].wt;
          total_val+=arr[i].v;
      }
      else{
          float fraction=cap/arr[i].wt;
          total_val+=(arr[i].v*fraction);
          break;
      }
  }
  cout<<"the total value is:"<<total_val<<endl;
  return 0;
}
