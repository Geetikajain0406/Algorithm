#include<iostream>
using namespace std;
void coin(int d[],int size,int amt){
for(int i=0;i<size-1;i++){
for(int j=0;j<size-i-1;j++){
    if(d[j]<d[j+1]){
        int temp=d[j+1];
        d[j+1]=d[j];
        d[j]=temp;
    }
}
}
int coinused[100];
int count =0;
for(int i=0;i<size;i++){
    while(amt>=d[i]){
        amt-=d[i];
        coinused[count++]=d[i];
    }
}
cout<<"coin used :"<<endl;
for(int i=0;i<count ;i++){
    cout<<coinused[i]<<" ";
}
cout<<"total coin used"<<count<<endl;
}

int main(){
int d[4] = {1,5,10,25};
int size =4;
int amt=63;
coin(d,size,amt);
return 0;
}

