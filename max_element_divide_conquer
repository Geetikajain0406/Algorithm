#include <iostream>
using namespace std;

int findMax(int arr[], int low, int high) {
    if (low == high) 
        return arr[low];
    int mid = (low + high) / 2;
    int leftMax = findMax(arr, low, mid);
    int rightMax = findMax(arr, mid + 1, high);
    return (leftMax > rightMax) ? leftMax : rightMax;
}

int main() {
    int arr[] = {1, 5, 2, 9, 3, 7};
    int n = 6;
    cout << "Maximum element = " << findMax(arr, 0, n - 1);
    return 0;
}
