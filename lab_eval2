#include<iostream> using namespace std; struct items{ int m,c,v;}; bool cmp(items a,items b){ return a.c/a.v >b.c/b.v;} int main(){ int n=5; items arr[]={(2,3,40),(1,2,25),(3,2,50),(4,1,40),(1,1,15)}; int t_val=0; int a_m=7; int a_c=6; for(int i=0;i<n;i++){ if(arr[i].m<=a_m){ if(arr[i].c<=a_c){ t_val+=arr[i].v; a_m-=arr[i].m; a_c-=arr[i].c; } else{ float fraction=a_m/arr[i].v; t_val+=(fraction*arr[i].m); } } else{ float fraction1=a_c/arr[i].v; t_val+=(fraction1*arr[i].m); } } cout<<"the total value is:"<<t_val<<endl; return 0;}
