#include <iostream>
using namespace std;
#define x 4
int subset[x];
int arr[x] = {3, 4, 5, 2};
int target = 7;
void subsetsum(int curr,int idx,int n,int subsetsize){
    if(curr==target){
       cout<<"{";
       for(int i=0;i<subsetsize;i++){
           cout<<subset[i]<<" ";
       }
       cout<<"}"<<endl;
           return;
    }
    if(idx==n || curr>target){
        return;
    }
    subset[subsetsize]=arr[idx];
    subsetsum(curr + arr[idx],idx+1,n,subsetsize+1);
    
    subsetsum(curr,idx+1,n,subsetsize);
}
int main() {
   cout<<"the subset sum is"<<target<<"are:"<<endl;
   subsetsum(0,0,x,0);

    return 0;
}
