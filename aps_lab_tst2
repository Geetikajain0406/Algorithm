#include<iostream>
#include<climits>
#include<algorithm>
using namespace std;
int main(){
   int cap=15;
   int n=6;
   int val[]={10,40,30,50,35,20};
   int k=3;
   int f[]={5,7,2,4,9,6};
   int wt[]={4,8,5,3,6,2};
   int dp[n+1][cap+1];
   for(int i=0;i<=n;i++){
    for(int w=0;w<=cap;w++){
            for(int j=0;j<=k;j++){
        if(i==0||w==0)
            dp[i][w]=0;
        else if(wt[i-1]<=cap)
        if( f[j]-f[j+1]<=k){
            dp[i][w]=max(dp[i-1][w-wt[i-1]]+val[i-1],dp[i-1][w]);
        }
            else
            dp[i][w]=dp[i-1][w];

    }
    }
   }
   cout<<"the max is:"<<dp[n][cap];
return 0;}


